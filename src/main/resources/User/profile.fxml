<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.user.ProfileController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="15.0" layoutX="150" layoutY="50">
        <Label text="User Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <Label fx:id="nameLabel" text="Name: " />
        <Label fx:id="emailLabel" text="Email: " />
        <Label fx:id="roleLabel" text="Role: " />
        <Label fx:id="addressLabel" text="Address: " />
        <Label fx:id="phoneLabel" text="Phone: " />

        <Button text="Back to Welcome" onAction="#handleBack" />
    </VBox>
</AnchorPane>
