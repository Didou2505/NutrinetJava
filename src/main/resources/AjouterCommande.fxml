        <Label alignment="CENTER" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #2196F3;" text="Finaliser votre commande" textFill="WHITE" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
