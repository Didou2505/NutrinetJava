<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AjouterProduitController"
            prefHeight="400.0" prefWidth="600.0" >

    <GridPane AnchorPane.bottomAnchor="10"
              AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.topAnchor="10"
              hgap="10" vgap="15">
        <Label text="Ajouter un nouveau produit"
               GridPane.columnIndex="0" GridPane.rowIndex="0"
               GridPane.columnSpan="2"
               style="-fx-font-weight: bold; -fx-font-size: 18px;"/>

        <!-- Colonne gauche -->
        <Label text="Nom du produit:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="tfNomProduit" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Prix:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="tfPrix" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="cbCategorie" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200"/>

        <!-- Colonne droite -->
        <Label text="Description:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextArea fx:id="taDescription" GridPane.columnIndex="3" GridPane.rowIndex="1"
                  prefRowCount="3" wrapText="true"/>

        <Label text="Stock:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="tfStock" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

        <Label text="Image:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <HBox GridPane.columnIndex="3" GridPane.rowIndex="3" spacing="5">
            <TextField fx:id="tfImagePath" editable="false" prefWidth="200"/>
            <Button fx:id="btnChoisirImage" text="Parcourir..." onAction="#handleChoisirImage"/>
        </HBox>

        <!-- Image Preview -->
        <Label text="Aperçu de l'image:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <ImageView fx:id="imagePreview" fitWidth="150" fitHeight="150" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

        <!-- Boutons en bas -->
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="5"
              GridPane.columnSpan="4" spacing="10"
              alignment="CENTER_RIGHT">
            <Button fx:id="btnAnnuler" text="Annuler" onAction="#handleAnnuler"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Button fx:id="btnAjouter" text="Ajouter" onAction="#handleAjouter"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        </HBox>

        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="30" prefHeight="40" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="30" prefHeight="40" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="30" prefHeight="40" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="30" prefHeight="40" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="30" prefHeight="50" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="30" prefHeight="150" vgrow="SOMETIMES"/>
        </rowConstraints>
    </GridPane>

</AnchorPane>
